!!!
%html

  %head

    %title= data.page.title || data.globals.title

    %meta{charset: "utf-8"}
    %meta{name: "description", content: data.page.description || data.globals.description}
    %meta{"http-equiv" => "cleartype", content: "on"}
    %meta{"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1"}

    =stylesheet_link_tag "main"
    =javascript_include_tag "vendor/require", "data-main" => "/assets/scripts/#{data.page.rjs_main_name}_main"

  %body
    %header#header= render_partial "partials/header"
    %div{role: "main", "class" => "main"}= yield
    %footer#footer= render_partial "partials/footer"
